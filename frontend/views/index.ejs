<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>📝 To-Do List</h1>

        <!-- Display Tasks -->
        <ul class="task-list">
            <% if (tasks.length === 0) { %>
                <li class="empty-task">No tasks available. Add some tasks to get started! 😊</li>
            <% } else { %>
                <% tasks.forEach(task => { %>
                    <li class="task-item">
                        <form action="/update/<%= task.id %>" method="POST" class="inline-form">
                            <input 
                                type="checkbox" 
                                name="completed" 
                                class="task-checkbox"
                                onchange="this.form.submit()"
                                <%= task.completed ? 'checked' : '' %>
                            >
                        </form>
                        <div class="task-text <%= task.completed ? 'task-completed' : '' %>">
                            <strong><%= task.title %></strong> - <%= task.description %>
                        </div>
                        <div class="actions">
                            <a href="/edit/<%= task.id %>" class="edit-btn" aria-label="Edit Task">✏️ Edit</a>
                            <form action="/delete/<%= task.id %>" method="POST" class="inline-form">
                                <button type="submit" class="delete-btn" aria-label="Delete Task">🗑️ Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            <% } %>
        </ul>

        <!-- Add Task Button -->
        <div class="add-task">
            <a href="/add" class="btn">➕ Add New Task</a>
        </div>
    </div>
</body>
</html>
